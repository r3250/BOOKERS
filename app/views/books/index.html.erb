<h1>Books</h1>



<table>
	<thead>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th></th>
   
  </tr>
</thead>

   <tbody>
  <% @books.each do |book| %>
  
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

<div class="field">
    <label>titele</label>
    <%= f.text_field :title %>
</div>

<div class="field">
    <label>body</label>
    <br>
    <%= f.text_area :body %>
</div>

    <%= f.submit "Create Book" %>
<% end %>