<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<div class="field">
	<label>Title</label>
	<%= f.text_field :title %>
</div>

<div class="field">
	<label>Body</label>
	<br>
	<%= f.text_area :body %>
</div>

	<%= f.submit "Update Book" %>


<% end %>

<div class="link-box">
<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to "Back", books_path %>
</div>